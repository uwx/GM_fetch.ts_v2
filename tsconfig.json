{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "target": "ES2019",
        "strict": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "declaration": true,
        "lib": [ "ESNext", "DOM", "DOM.Iterable" ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.json"
    ]
}
